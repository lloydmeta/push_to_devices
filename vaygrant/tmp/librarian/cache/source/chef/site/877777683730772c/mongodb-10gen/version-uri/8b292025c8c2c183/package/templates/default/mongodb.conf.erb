jsonp = <%= node['mongodb']['enable_jsonp'] %>
shardsvr = <%= node['mongodb']['enable_shardsvr'] %>
configsvr = <%= node['mongodb']['enable_configsvr'] %>
pidfilepath=/var/run/<%= @nodename %>.pid
oplogSize=<%= node['mongodb']['oplogSize'] %>
nojournal = <%= node['mongodb']['enable_nojournal'] %> 
directoryperdb = <%=node['mongodb']['enable_directoryperdb'] %> 

